<table class="table table-striped">
  <thead>
    <tr>
      <td>Name</td>
      <td></td>
    </tr>
  </thead>
  <% @tasks.each do |task| %>
    <tr>
      <td><%= task.description %></td>
      <td>
        <%= link_to "Edit", edit_list_task_path(@list, task), class: 'btn btn-default btn-xs' %>
      </td>
      <td>
        <%= link_to "Delete", list_task_path(@list, task), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default btn-xs' %>
      </td>
      <td>
        <%= link_to "Complete", complete_me_list_task_path(@list, task), method: :post, class: 'btn btn-default btn-xs' %>
      </td>
    </tr>
  <% end %>
</table>
