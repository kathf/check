<div class="row">
  <div class="col-lg-12">
    <%= simple_form_for [@list, @task], html: { class: 'form-horizontal' } do |form| %>
      <%= form.input :description %>
      <%= form.input :priority %>
      <%= form.input :due_at, as: :date %>
      <%= form.association :category, as: :check_boxes, collection: Category.all %>
      <%= form.simple_fields_for :link do |link_field| %>
        <%= link_field.input :url %>
      <% end %>
      <%= form.button :submit, class: 'btn btn-success' %>
    <% end %>
    <%= link_to "Cancel", list_path(@list), class: 'btn btn-danger' %>
  </div>
</div>
