<div class="row">

  <%= form_for [@list, @task] , html: { class: 'form-horizontal' } do |form| %>
    <div class="form-group">
      <%= form.label :description, class: 'col-xs-12 col-sm-offset-1 col-sm-2 control-label' %>
      <div class="col-xs-12 col-sm-6">
        <%= form.text_field :description, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= form.label :priority, class: 'col-xs-12 col-sm-offset-1 col-sm-2 control-label' %>
      <div class="col-xs-12 col-sm-6">
        <%= form.number_field :priority, in: 1..5, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= form.label :due_at, class: 'col-xs-12 col-sm-offset-1 col-sm-2 control-label' %>
      <div class="col-xs-12 col-sm-6">
        <%= form.date_field :due_at, class: 'form-control' %>
      </div>
    </div>
    <div class="border">
      <%= render partial: 'category', collection: Category.all  %>
    </div>
    <div class="form-group">
      <div class="col-xs-offset-2 col-xs-10">
        <%= form.submit class: 'btn btn-success' %>
        <%= link_to "Cancel", list_path(@list), class: 'btn btn-danger' %>
      </div>
    </div>
  <% end %>

</div>
