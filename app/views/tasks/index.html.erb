<ol class="breadcrumb">
  <li><%= link_to "Lists", lists_path %></li>
  <li class="active"><%= @list.name %></li>
</ol>

<div class="container">

  <div class="row">
    <div class="page-header">
      <h1><%= @list.name %></h1>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="new-task-form">
        <%= simple_form_for [@list, @task], remote: true, html: { class: 'form-inline' } do |form| %>
          <%= form.input :description, placeholder: 'Add a Task', wrapper_html: { class: "col-sm-8" } %>
      </div>
      <div class="col-sm-3">
          <%= form.submit class: "btn btn-success pull-right" %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <table class="table table-striped">
        <thead>
          <tr>
            <td>Name</td>
            <td>Created at</td>
            <td>Due at</td>
            <td>Categories</td>
            <td></td>
          </tr>
        </thead>
        <tbody id="tasks">
          <%= render partial: 'task', collection: @tasks, as: :task %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <%= link_to "Show completed tasks", completed_index_list_tasks_path(@list), class: 'btn btn-default btn-md' %>
    </div>
  </div>

</div>
