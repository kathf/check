<div class="container">

  <div class="row">
  </div>

  <div class="row">
    <div class="page-header">
      <h1><%= @list.name %></h1>
    </div>

    <div class="col-lg-8">
      <%= form_for @list, html: { class: 'form-horizontal' } do |form| %>
        <div class="form-group">
          <%= form.label :name, class: 'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <%= form.text_field :name, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <%= form.submit class: 'btn btn-success' %>
            <%= link_to "Cancel", lists_path %>
          </div>
        </div>
      <% end %>
    </div>

    <div class="col-lg-4">
      <div class="well">
        Edit your list name
      </div>
    </div>
  </div>

</div>
