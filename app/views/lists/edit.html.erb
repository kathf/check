<div class="container">

  <div class="row">
  </div>

  <div class="row">
    <div class="page-header">
      <h3>Edit list: <%= @list.name %></h3>
    </div>

    <div class="col-sm-8 col-md-6 col-lg-5">
      <%= simple_form_for @list, html: { class: 'form-horizontal' } do |form| %>
        <%= form.input :name %>
        <%= form.submit class: 'btn btn-success pull-left' %>
      <% end %>
    <%= link_to "Cancel", lists_path, class: 'btn btn-warning pull-right' %>
    </div>
  </div>
</div>
