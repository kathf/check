
<ol class="breadcrumb">
  <li><%= link_to "Lists", lists_path %> </li>
  <li class="active">Tasks due this week</li>
</ol>

<div class="row">
  <div class="page-header">
    <h1>Tasks due this week</h1>
  </div>
</div>

<div class="row">

  <table class="table table-striped">
    <thead>
      <tr>
        <td>Name</td>
        <td></td>
      </tr>
    </thead>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.description %></td>
        <td>
          <%= link_to "Delete", list_task_path(task.list, task), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default btn-xs' %>
        </td>
        <td>
          <%= link_to "Complete", complete_me_list_task_path(task.list, task), method: :post, class: 'btn btn-default btn-xs' %>
        </td>
      </tr>
    <% end %>
  </table>
</div>
