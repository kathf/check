<div class="container">
  <div class="row">
    <div class="col-xs-6 col-sm-4 column-lists">

      <ul class="list-group"> <%= %> </ul>

    </div>
    <div class="col-xs-6 col-sm-4 column-tasks">

    </div>
    <div class="col-xs-6 col-sm-4 column-extras">


    </div>



      <h3>Lists</h3>
    </div>
  </div>

  <div class="row">
    <table class="table table-striped col-sm-8">
      <thead>
        <tr>
          <td>Name</td>
          <td>Actions</td>
        </tr>
      </thead>
      <% @lists.each do |list| %>
        <tr>
          <td>
            <%= link_to(list.name, list_path(list)) %>
          </td>
          <td>

            <!-- Split button -->
            <div class="btn-group">
              <%= link_to "Edit", edit_list_path(list), class: 'btn btn-danger btn-xs' %>
              <button type="button" class="btn btn-danger btn-xs dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                <span class="caret"></span>
                <span class="sr-only">Toggle Dropdown</span>
              </button>
              <ul class="dropdown-menu" role="menu">
                <li>
                  <%= link_to "Delete", list_path(list), method: :delete, data: { confirm: 'Are you sure?' } %>
                </li>
              </ul>
            </div>
          </td>
        </tr>
      <% end %>
    </table>
  </div>

  <div class="row text-center">
    <%= link_to "New List", new_list_path, class: 'btn btn-default' %>
    <%= link_to "Show tasks due this week", due_this_week_lists_path, class: 'btn btn-default btn-md' %>
  </div>

</div>
